<div id="createTransactionPage" class="page" style="display:none;">
    <back-button></back-button>

    <form id="createTransactionForm">
        <h3>Create Transaction</h3>
        
        <label>Category
            <select id="createTransactionCategory"></select>
        </label>
        
        <label>Amount
            <input id="createTransactionAmount" type="number" min="0", step="0.01" required>
        </label>
        
        <label>Location
            <input id="createTransactionLocation" type="text">
        </label>
        
        <label>Date
            <input id="createTransactionDate" type="date" required>
        </label>
        
        <label>Notes:
            <textarea id="createTransactionNote"></textarea>
        </label>
        
        <input type="submit" value="Submit">
    </form>
</div>